<%- include("includes/header"); %>

<script>

    function confirmar(mensagem) {
        console.log(event)
        const result = confirm(mensagem);

        if (!result) {
            return false;
        }
    }
    
</script>

<div class="container">
    <h3>lista dos posts</h3>

    <div>
        <a type="button" class="btn btn-primary" href="/blog/create/">Adicionar Post</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="min-width: 200px">Título</th>
                <th scope="col" style="min-width: 300px">Texto da Postagem</th>
                <th scope="col">Data de Criação</th>
                <th scope="col">Data da postagem</th>
            </tr>
        </thead>
        <tbody>
            <% for(const post of posts) { %>
            <tr class="posts">
                <td><%= post.title %></td>
                <td><%= post.textPost %></td>
                <td><%= post.createdAt %></td>
                <td><%= post.postedAt %></td>
                <td>
                    <a type="button" class="btn btn-success" href="/blog/edit/<%= post.id %>">Editar</a>
                    <form action="/blog/remove/<%= post.id %>" method="POST" style="display: inline-block" onsubmit="return confirmar('Tem certeza que deseja excluir esse post?')">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>

</div>

<%- include("includes/footer"); %>
